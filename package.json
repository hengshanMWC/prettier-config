{
  "name": "item-template",
  "version": "0.0.0",
  "packageManager": "pnpm@8.5.1",
  "access": "public",
  "license": "MIT",
  "homepage": "https://github.com/hengshanMWC/item-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hengshanMWC/item-template.git"
  },
  "bugs": {
    "url": "https://github.com/hengshanMWC/item-template/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "commit": "cz",
    "init": "pnpm i && npm run prepare",
    "prepare": "husky install",
    "build": "unbuild",
    "release": "esno ./scripts/release",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "lint": "eslint --ext=js,ts,json,md,tsx .",
    "lint:fix": "eslint --fix --ext=js,ts,json,md,tsx .",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "devDependencies": {
    "@abmao/pkgs": "latest",
    "@antfu/eslint-config-ts": "^0.38.5",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitest/coverage-c8": "^0.31.0",
    "colors": "^1.4.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.41.0",
    "esno": "^0.16.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "typescript": "^5.0.4",
    "unbuild": "^2.0.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitepress": "1.0.0-beta.5",
    "vitest": "^0.31.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,less,md,json}": "pnpm lint:fix"
  }
}
